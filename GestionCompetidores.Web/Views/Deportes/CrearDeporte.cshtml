@model GestionCompetidores.Data.EF.Deporte

@{
    ViewData["Title"] = "CrearDeporte";
}

<h1>Agregar Deporte</h1>

<h4>Deporte</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Deportes" asp-action="CrearDeporte">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreDeporte" class="control-label"></label>
                <input asp-for="NombreDeporte" class="form-control" />
                <span asp-validation-for="NombreDeporte" class="text-danger"></span><br />
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



